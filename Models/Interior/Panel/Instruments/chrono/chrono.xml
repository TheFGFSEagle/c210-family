<?xml version="1.0"?>
<PropertyList>
	<path>chrono.ac</path>
	
	<animation>
		<type>slider</type>
		<object-name>ModeButton</object-name>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<property>instrumentation/clock/mode-button-pressed</property>
		<factor>0.003</factor>
		<action>
			<binding>
				<command>property-assign</command>
				<property>instrumentation/clock/mode-button-pressed</property>
				<value>1</value>
			</binding>
		</action>
		<release>
			<binding>
				<command>property-interpolate</command>
				<property>instrumentation/clock/mode-button-pressed</property>
				<value>0</value>
				<time>0.01</time>
			</binding>
			<binding>
				<command>nasal</command>
				<script>lc2.lc2.modePressed();</script>
			</binding>
		</release>
	</animation>
	<animation>
		<type>slider</type>
		<object-name>SetResetButton</object-name>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<property>instrumentation/clock/set-button-pressed</property>
		<factor>0.003</factor>
		<action>
			<binding>
				<command>property-assign</command>
				<property>instrumentation/clock/set-button-pressed</property>
				<value>1</value>
			</binding>
		</action>
		<release>
			<binding>
				<command>property-interpolate</command>
				<property>instrumentation/clock/set-button-pressed</property>
				<value>0</value>
				<time>0.01</time>
			</binding>
			<binding>
				<command>nasal</command>
				<script>lc2.lc2.setResetPressed();</script>
			</binding>
		</release>
	</animation>
	<animation>
		<type>slider</type>
		<object-name>StSpDtAvButton</object-name>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<property>instrumentation/clock/start-stop-button-pressed</property>
		<factor>0.003</factor>
		<action>
			<binding>
				<command>property-assign</command>
				<property>instrumentation/clock/start-stop-button-pressed</property>
				<value>1</value>
			</binding>
		</action>
		<release>
			<binding>
				<command>property-interpolate</command>
				<property>instrumentation/clock/start-stop-button-pressed</property>
				<value>0</value>
				<time>0.01</time>
			</binding>
			<binding>
				<command>nasal</command>
				<script>lc2.lc2.stSpDtAvPressed();</script>
			</binding>
		</release>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>ChronoDisplay</object-name>
		<emission>
			<red>1</red>
			<green>0.6</green>
			<blue>0.3</blue>
			<factor-prop>controls/lighting/panel-integral-norm</factor-prop>
		</emission>
	</animation>
	
	<text>
		<name>Label</name>
		<type type="string">literal</type>
		<text type="string">Clock</text>
		<draw-text type="bool">true</draw-text>
		<font>Helvetica.txf</font>
		<character-size type="double">0.01</character-size>
		<character-aspect-ratio type="double">1.0</character-aspect-ratio>
		<axis-alignment>yz-plane</axis-alignment>
		<max-height>0.04</max-height>
		<max-width>0.04</max-width>
		<font-resolution>
			<width type="int">32</width>
			<height type="int">32</height>
		</font-resolution>
		<alignment>center-center</alignment>
		<offsets>
			<x-m>0.01</x-m>
			<y-m>0.0 </y-m>
			<z-m>0.0</z-m>
		</offsets>
	</text>
	
	<animation>
		<type>material</type>
		<object-name>Label</object-name>
		<emission>
			<red>1</red>
			<green>1</green>
			<blue>1</blue>
		</emission>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>Label</object-name>
		<condition>
			<property>/sim/panel-hotspots</property>
		</condition>
	</animation>
	
	<effect>
		<inherits-from>../../../../Effects/p210n-instrument-glass</inherits-from>
		<object-name>Glass</object-name>
	</effect>	
</PropertyList>
