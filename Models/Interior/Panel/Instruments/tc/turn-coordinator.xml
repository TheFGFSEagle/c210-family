<?xml version="1.0"?>
<PropertyList>
	<path>turn-coordinator.ac</path>
	
	<animation>
		<type>rotate</type>
		<object-name>Airplane</object-name>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
		<property>instrumentation/turn-indicator/indicated-turn-rate</property>
		<factor>15</factor>
		<min-deg>-20</min-deg>
		<max-deg>20</max-deg>
	</animation>
 	<animation>
		<type>rotate</type>
		<object-name>Ball</object-name>
		<property>instrumentation/slip-skid-ball/indicated-slip-skid</property>
		<factor>-21</factor>
		<min-deg>-20</min-deg>
		<max-deg>20</max-deg>
		<axis>
			<object-name>BallAxis</object-name>
		</axis>
	</animation>
	
	<text>
		<name>Label</name>
		<type type="string">literal</type>
		<text type="string">Turn Coordinator</text>
		<draw-text type="bool">true</draw-text>
		<font>Helvetica.txf</font>
		<character-size type="double">0.015</character-size>
		<character-aspect-ratio type="double">1.0</character-aspect-ratio>
		<axis-alignment>yz-plane</axis-alignment>
		<max-height>0.08</max-height>
		<max-width>0.08</max-width>
		<font-resolution>
			<width type="int">32</width>
			<height type="int">32</height>
		</font-resolution>
		<alignment>center-center</alignment>
		<offsets>
			<x-m>0.01</x-m>
			<y-m>0.0</y-m>
			<z-m>0.0</z-m>
		</offsets>
	</text>
	
	<animation>
		<type>material</type>
		<object-name>Label</object-name>
		<emission>
			<red>1</red>
			<green>1</green>
			<blue>1</blue>
		</emission>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>Label</object-name>
		<condition>
			<property>/sim/panel-hotspots</property>
		</condition>
	</animation>

	<effect>
		<inherits-from>../../../../Effects/p210n-instrument-glass</inherits-from>
		<object-name>Glass</object-name>
	</effect>
</PropertyList>
