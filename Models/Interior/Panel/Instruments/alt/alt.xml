<?xml version="1.0"?>
<PropertyList>
	<path>alt.ac</path>
	
	<animation>
		<type>rotate</type>
		<object-name>Needle</object-name>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<center>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</center>
		<property>instrumentation/altimeter/indicated-altitude-ft</property>
		<factor>0.36</factor>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>GroundFlag</object-name>
		<condition>
			<less-than>
				<property>instrumentation/altimeter/indicated-altitude-ft</property>
				<value>10000</value>
			</less-than>
		</condition>
	</animation>
	<animation>
		<type>select</type>
		<object-name>FaultFlag</object-name>
		<condition>
			<not>
				<property>instrumentation/altimeter/serviceable</property>
			</not>
		</condition>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>AltScale10000</object-name>
		<axis>
			<object-name>AltScale1000Axis</object-name>
		</axis>
		<expression>
			<product>
				<difference>
					<property>instrumentation/altimeter/indicated-altitude-ft</property>
					<mod>
						<property>instrumentation/altimeter/indicated-altitude-ft</property>
						<value>10000</value>
					</mod>
				</difference>
				<value>-0.0036</value>
			</product>
		</expression>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>AltScale1000</object-name>
		<axis>
			<object-name>AltScale1000Axis</object-name>
		</axis>
		<expression>
			<product>
				<difference>
					<property>instrumentation/altimeter/indicated-altitude-ft</property>
					<mod>
						<property>instrumentation/altimeter/indicated-altitude-ft</property>
						<value>1000</value>
					</mod>
				</difference>
				<value>-0.036</value>
			</product>
		</expression>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>AltScale100</object-name>
		<axis>
			<object-name>AltScale100Axis</object-name>
		</axis>
		<property>instrumentation/altimeter/indicated-altitude-ft</property>
		<factor>-0.36</factor>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>PressScale10</object-name>
		<axis>
			<object-name>PressScaleAxis</object-name>
		</axis>
		<expression>
			<product>
				<difference>
					<property>instrumentation/altimeter/setting-inhg</property>
					<mod>
						<property>instrumentation/altimeter/setting-inhg</property>
						<value>10</value>
					</mod>
				</difference>
				<value>-3.6</value>
			</product>
		</expression>
	</animation>	
	<animation>
		<type>rotate</type>
		<object-name>PressScale1</object-name>
		<axis>
			<object-name>PressScaleAxis</object-name>
		</axis>
		<expression>
			<product>
				<difference>
					<property>instrumentation/altimeter/setting-inhg</property>
					<mod>
						<property>instrumentation/altimeter/setting-inhg</property>
						<value>1</value>
					</mod>
				</difference>
				<value>-36</value>
			</product>
		</expression>
	</animation>	
	<animation>
		<type>rotate</type>
		<object-name>PressScale0.1</object-name>
		<axis>
			<object-name>PressScaleAxis</object-name>
		</axis>
		<expression>
			<product>
				<difference>
					<property>instrumentation/altimeter/setting-inhg</property>
					<mod>
						<property>instrumentation/altimeter/setting-inhg</property>
						<value>0.1</value>
					</mod>
				</difference>
				<value>-360</value>
			</product>
		</expression>
	</animation>	
	<animation>
		<type>rotate</type>
		<object-name>PressScale0.01</object-name>
		<axis>
			<object-name>PressScaleAxis</object-name>
		</axis>
		<expression>
			<product>
				<difference>
					<property>instrumentation/altimeter/setting-inhg</property>
					<mod>
						<property>instrumentation/altimeter/setting-inhg</property>
						<value>0.01</value>
					</mod>
				</difference>
				<value>-3600</value>
			</product>
		</expression>
	</animation>	
	
	<animation>
		<type>knob</type>
		<object-name>Knob</object-name>
		<property>instrumentation/altimeter/setting-inhg</property>
		<axis>
			<object-name>KnobAxis</object-name>
		</axis>
		<factor>800</factor>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/altimeter/setting-inhg</property>
				<factor>0.01</factor>
				<min>27.9</min>
				<max>31.0</max>
				<wrap>false</wrap>
			</binding>
		</action>
		<hovered>
			<binding>
				<command>set-tooltip</command>
				<tooltip-id>altimeter-baroset</tooltip-id>
				<label>Pressure setting: %2.2f inHg</label>
				<measure-text>Pressure setting: 29.92 inHg</measure-text>
				<property>instrumentation/altimeter/setting-inhg</property>
			</binding>
		</hovered>
	</animation>
	 <text>
		<name>Label</name>
		<type type="string">literal</type>
		<text type="string">Altimeter</text>
		<draw-text type="bool">true</draw-text>
		<font>Helvetica.txf</font>
		<character-size type="double">0.015</character-size>
		<character-aspect-ratio type="double">1.0</character-aspect-ratio>
		<axis-alignment>yz-plane</axis-alignment>
		<max-height>0.08</max-height>
		<max-width>0.08</max-width>
		<font-resolution>
			<width type="int">32</width>
			<height type="int">32</height>
		</font-resolution>
		<alignment>center-center</alignment>
		<offsets>
			<x-m>0.01</x-m>
			<y-m>0.0</y-m>
			<z-m>0.0</z-m>
		</offsets>
	</text>
	
	<animation>
		<type>material</type>
		<object-name>Label</object-name>
		<emission>
			<red>1</red>
			<green>1</green>
			<blue>1</blue>
		</emission>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>Label</object-name>
		<condition>
			<property>/sim/panel-hotspots</property>
		</condition>
	</animation>
	
	<effect>
		<inherits-from>../../../../Effects/p210n-instrument-glass</inherits-from>
		<object-name>Glass</object-name>
	</effect>
</PropertyList>
