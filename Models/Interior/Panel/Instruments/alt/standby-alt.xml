<?xml version="1.0"?>
<PropertyList>
	<path>standby-alt.ac</path>
	
	<animation>
		<type>rotate</type>
		<object-name>AltNeedle100</object-name>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<property>instrumentation/altimeter[1]/indicated-altitude-ft</property>
		<factor>0.36</factor>	
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>AltNeedle1000</object-name>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<property>instrumentation/altimeter[1]/indicated-altitude-ft</property>
		<factor>0.036</factor>
	</animation>
	<animation>
		<type>rotate</type>
		<object-name>AltNeedle10000</object-name>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<property>instrumentation/altimeter[1]/indicated-altitude-ft</property>
		<factor>0.0036</factor>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>InHgScale</object-name>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<property>instrumentation/altimeter[1]/setting-inhg</property>
		<interpolation>
			<entry>
				<ind>27.5</ind>
				<dep>10</dep>
			</entry>
			<entry>
				<ind>31.0</ind>
				<dep>360</dep>
			</entry>
		</interpolation>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>Flag</object-name>
		<axis>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<property>instrumentation/altimeter[1]/indicated-altitude-ft</property>
		<interpolation>
			<entry>
				<ind>10000</ind>
				<dep>0</dep>
			</entry>
			<entry>
				<ind>15000</ind>
				<dep>40</dep>
			</entry>
		</interpolation>
	</animation>
	
	<animation>
		<type>knob</type>
		<object-name>InHgKnob</object-name>
		<property>instrumentation/altimeter[1]/setting-inhg</property>
		<factor>800</factor>
		<axis>
			<object-name>InHgKnobAxis</object-name>
		</axis>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/altimeter[1]/setting-inhg</property>
				<factor>0.01</factor>
				<min>26.0</min>
				<max>33.0</max>
				<wrap>false</wrap>
			</binding>
		</action>
		<hovered>
			<binding>
				<command>set-tooltip</command>
				<tooltip-id>altimeter-baroset</tooltip-id>
				<label>Pressure setting: %2.2f inHg</label>
				<measure-text>Pressure setting: 29.92 inHg</measure-text>
				<property>instrumentation/altimeter[1]/setting-inhg</property>
			</binding>
		</hovered>
	</animation>
	 <text>
		<name>Label</name>
		<type type="string">literal</type>
		<text type="string">Standby Altimeter</text>
		<draw-text type="bool">true</draw-text>
		<font>Helvetica.txf</font>
		<character-size type="double">0.015</character-size>
		<character-aspect-ratio type="double">1.0</character-aspect-ratio>
		<axis-alignment>yz-plane</axis-alignment>
		<max-height>0.08</max-height>
		<max-width>0.08</max-width>
		<font-resolution>
			<width type="int">32</width>
			<height type="int">32</height>
		</font-resolution>
		<alignment>center-center</alignment>
		<offsets>
			<x-m>0.01</x-m>
			<y-m>0.0 </y-m>
			<z-m>0.0</z-m>
		</offsets>
	</text>
	
	<animation>
		<type>material</type>
		<object-name>Label</object-name>
		<emission>
			<red>1</red>
			<green>1</green>
			<blue>1</blue>
		</emission>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>Label</object-name>
		<condition>
			<property>/sim/panel-hotspots</property>
		</condition>
	</animation>
	
	<effect>
		<inherits-from>../../../../Effects/p210n-instrument-glass</inherits-from>
		<object-name>Glass</object-name>
	</effect>
</PropertyList>
