<?xml version="1.0"?>
<PropertyList>
	<path>egt.ac</path>
	
	<animation>
		<type>rotate</type>
		<object-name>EGTNeedle</object-name>
		<axis>
			<object-name>KnobNeedleAxis</object-name>
		</axis>
		<property>instrumentation/engine/indicated-egt-degf</property>
		<interpolation>
			<entry>
				<ind>900</ind>
				<dep>0</dep>
			</entry>
			<entry>
				<ind>1000</ind>
				<dep>4</dep>
			</entry>
			<entry>
				<ind>1500</ind>
				<dep>93</dep>
			</entry>
		</interpolation>
	</animation>
	
	<animation>
		<type>rotate</type>
		<object-name>MarkerNeedle</object-name>
		<axis>
			<object-name>KnobNeedleAxis</object-name>
		</axis>
		<property>instrumentation/engine/target-egt-degf</property>
		<interpolation>
			<entry>
				<ind>1000</ind>
				<dep>4</dep>
			</entry>
			<entry>
				<ind>1500</ind>
				<dep>93</dep>
			</entry>
		</interpolation>
	</animation>
	
	<animation>
		<type>knob</type>
		<object-name>Knob</object-name>
		<property>instrumentation/engine/target-egt-degf</property>
		<interpolation>
			<entry>
				<ind>1000</ind>
				<dep>0</dep>
			</entry>
			<entry>
				<ind>1200</ind>
				<dep>4</dep>
			</entry>
			<entry>
				<ind>1700</ind>
				<dep>93</dep>
			</entry>
		</interpolation>
		<axis>
			<object-name>KnobNeedleAxis</object-name>
		</axis>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>instrumentation/engine/target-egt-degf</property>
				<factor>10</factor>
				<min>1200</min>
				<max>1700</max>
				<wrap>false</wrap>
			</binding>
		</action>
		<hovered>
			<binding>
				<command>set-tooltip</command>
				<tooltip-id>egt-indicator</tooltip-id>
				<label>Current EGT: %4d 째F\nTarget EGT:  %4d 째F</label>
				<measure-text>Current EGT: 1700 째F\nTarget EGT: 1700 째F</measure-text>
				<property>instrumentation/engine/indicated-egt-degf</property>
				<property>instrumentation/engine/target-egt-degf</property>
			</binding>
		</hovered>
	</animation>
	<text>
		<name>Label</name>
		<type type="string">literal</type>
		<text type="string">EGT Indicator</text>
		<draw-text type="bool">true</draw-text>
		<font>Helvetica.txf</font>
		<character-size type="double">0.01</character-size>
		<character-aspect-ratio type="double">1.0</character-aspect-ratio>
		<axis-alignment>yz-plane</axis-alignment>
		<max-height>0.04</max-height>
		<max-width>0.04</max-width>
		<font-resolution>
			<width type="int">32</width>
			<height type="int">32</height>
		</font-resolution>
		<alignment>center-center</alignment>
		<offsets>
			<x-m>0.01</x-m>
			<y-m>0.0</y-m>
			<z-m>0.0</z-m>
		</offsets>
	</text>
	
	<animation>
		<type>material</type>
		<object-name>Label</object-name>
		<emission>
			<red>1</red>
			<green>1</green>
			<blue>1</blue>
		</emission>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>Label</object-name>
		<condition>
			<property>/sim/panel-hotspots</property>
		</condition>
	</animation>
	
	<effect>
		<inherits-from>../../../../Effects/p210n-instrument-glass</inherits-from>
		<object-name>Glass</object-name>
	</effect>
</PropertyList>
