<?xml version="1.0"?>
<PropertyList>
	<path>ap-control.ac</path>
	
	<animation>
		<type>knob</type>
		<object-name>OnOffSwitch</object-name>
		<axis>
			<x>0</x>
			<y>-1</y>
			<z>0</z>
		</axis>
		<property>controls/autoflight/enabled</property>
		<factor>40</factor>
		<action>
			<binding>
				<command>property-toggle</command>
				<property>controls/autoflight/enabled</property>
				<value>0</value>
				<value>1</value>
			</binding>
		</action>
	</animation>
	<animation>
		<type>knob</type>
		<object-name>PitchSelectWheel</object-name>
		<axis>
			<object-name>PitchSelectWheelAxis</object-name>
		</axis>
		<property>controls/autoflight/target-pitch</property>
		<factor>5</factor>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>controls/autoflight/target-pitch</property>
				<factor>0.25</factor>
				<min>-10</min>
				<max>10</max>
				<wrap>false</wrap>
			</binding>
		</action>
	</animation>
	<animation>
		<type>knob</type>
		<object-name>TurnSelectKnob</object-name>
		<axis>
			<object-name>TurnSelectKnobAxis</object-name>
		</axis>
		<property>/controls/autoflight/target-turn-rate-norm</property>
		<factor>20</factor>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>/controls/autoflight/target-turn-rate-norm</property>
				<factor>0.05</factor>
				<min>-1</min>
				<max>1</max>
				<wrap>false</wrap>
			</binding>
		</action>
	</animation>
	<animation>
		<type>knob</type>
		<object-name>TurnSelectKnob</object-name>
		<axis>
			<object-name>TurnSelectKnobAxis</object-name>
		</axis>
		<property>/controls/autoflight/target-turn-rate-norm</property>
		<factor>20</factor>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>/controls/autoflight/target-turn-rate-norm</property>
				<factor>0.05</factor>
				<min>-1</min>
				<max>1</max>
				<wrap>false</wrap>
			</binding>
		</action>
	</animation>
	<animation>
		<type>knob</type>
		<object-name>WingsLevelTrimSelectKnob</object-name>
		<axis>
			<object-name>TurnSelectKnobAxis</object-name>
		</axis>
		<property>controls/autoflight/wings-level-trim-norm</property>
		<factor>20</factor>
		<action>
			<binding>
				<command>property-adjust</command>
				<property>controls/autoflight/wings-level-trim-norm</property>
				<factor>0.05</factor>
				<min>-1</min>
				<max>1</max>
				<wrap>false</wrap>
			</binding>
		</action>
	</animation>
	<animation>
		<type>slider</type>
		<object-name>TestButton</object-name>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
		<property>controls/autoflight/test</property>
		<factor>0.006</factor>
		<action>
			<binding>
				<command>property-assign</command>
				<property>controls/autoflight/test</property>
				<value>1</value>
			</binding>
		</action>
		<release>
			<binding>
				<command>property-assign</command>
				<property>controls/autoflight/test</property>
				<value>0</value>
			</binding>
		</release>
	</animation>
	
	<text>
		<name>Label</name>
		<type type="string">literal</type>
		<text type="string">Autopilot control</text>
		<draw-text type="bool">true</draw-text>
		<font>Helvetica.txf</font>
		<character-size type="double">0.015</character-size>
		<character-aspect-ratio type="double">1.0</character-aspect-ratio>
		<axis-alignment>yz-plane</axis-alignment>
		<max-height>0.04</max-height>
		<max-width>0.16</max-width>
		<font-resolution>
			<width type="int">32</width>
			<height type="int">32</height>
		</font-resolution>
		<alignment>center-center</alignment>
		<offsets>
			<x-m>0.01</x-m>
			<y-m>0.02</y-m>
			<z-m>0.025</z-m>
		</offsets>
	</text>
	
	<animation>
		<type>material</type>
		<object-name>Label</object-name>
		<emission>
			<red>1</red>
			<green>1</green>
			<blue>1</blue>
		</emission>
	</animation>
	
	<animation>
		<type>select</type>
		<object-name>Label</object-name>
		<condition>
			<property>/sim/panel-hotspots</property>
		</condition>
	</animation>
</PropertyList>
