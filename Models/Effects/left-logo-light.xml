<?xml version="1.0"?>
<PropertyList>
	<path>Models/Effects/procedural-light.ac</path>

	<effect>
		<inherits-from>Models/Effects/left-logo-light</inherits-from>
		<object-name>Light</object-name>
	</effect>
	
	<animation>
		<type>noshadow</type>
		<object-name>Light</object-name>
	</animation>
	
	<animation>
		<type>scale</type>
		<object-name>Light</object-name>
		<x-offset>0.2</x-offset>
		<y-offset>0.2</y-offset>
		<z-offset>0.2</z-offset>
	</animation>
	
	<model>
		<name>LightPlate</name>
		<path>Models/Effects/lights.xml</path>
		<overlay>
			<params>
				<light-used>white</light-used>
				<show-prop>controls/lighting/logo-lights</show-prop>
			</params>
		</overlay>
	</model>
	
	<!-- Compositor light - we're not going to support any Rembrandt nonsense -->
	<light>
		<name>LeftLogoLight</name>
		<type>spot</type>
		<position>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</position>
		<direction>
			<x>0.6</x>
			<y>1</y>
			<z>0.6</z>
		</direction>
		<ambient>
			<r>1</r>
			<g>1</g>
			<b>1</b>
			<a>0</a>
		</ambient>
		<diffuse>
			<r>1</r>
			<g>1</g>
			<b>1</b>
			<a>0</a>
		</diffuse>
		<specular>
			<r>1</r>
			<g>1</g>
			<b>1</b>
			<a>0</a>
		</specular>
		<attenuation>
			<c>1</c>
			<l>0.5</l>
			<q>0.1875</q>
		</attenuation>
		<spot-exponent>12</spot-exponent>
		<spot-cutoff>40</spot-cutoff>
		<range-m>10</range-m>
		<dim-factor>
			<property>controls/lighting/logo-lights</property>
		</dim-factor>
	</light>
</PropertyList>
