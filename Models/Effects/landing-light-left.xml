<?xml version="1.0"?>
<PropertyList>
	<path>Models/Effects/procedural-light.ac</path>

	<effect>
		<inherits-from>Models/Effects/landing-light-left</inherits-from>
		<object-name>Light</object-name>
	</effect>
	
	<animation>
		<type>noshadow</type>
		<object-name>Light</object-name>
	</animation>
	
	<animation>
		<type>scale</type>
		<object-name>Light</object-name>
		<x-offset>0.3</x-offset>
		<y-offset>0.3</y-offset>
		<z-offset>0.3</z-offset>
	</animation>
	
	<model>
		<path>Models/Effects/lights.xml</path>
		<overlay>
			<params>
				<light-used>landing</light-used>
				<show-prop>controls/lighting/landing-lights</show-prop>
			</params>
		</overlay>
	</model>

	<!-- Compositor light - we're not going to support any Rembrandt nonsense -->
	<light>
		<name>LandingLightLeft</name>
		<type>spot</type>
		<position>
			<x-m>-0.25</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</position>
		<direction>
			<x>-1.0</x>
			<y>-0.1</y>
			<z>0</z>
		</direction>
		<ambient>
			<r>1.00</r>
			<g>0.95</g>
			<b>0.95</b>
			<a>0</a>
		</ambient>
		<diffuse>
			<r>1.00</r>
			<g>0.95</g>
			<b>0.95</b>
			<a>0</a>
		</diffuse>
		<specular>
			<r>1.00</r>
			<g>0.95</g>
			<b>0.95</b>
			<a>0</a>
		</specular>
		<attenuation>
			<c>1.0</c>
			<l>0.0225</l>
			<q>0.000001875</q>
		</attenuation>
		<spot-exponent>40</spot-exponent>
		<spot-cutoff>40</spot-cutoff>
		<range-m>500</range-m>
		<dim-factor>
			<property>controls/lighting/landing-lights</property>
		</dim-factor>
	</light>
</PropertyList>
