<?xml version="1.0"?>
<PropertyList>
	<path>Models/Effects/procedural-light.ac</path>

	<effect>
		<inherits-from>Models/Effects/tail-nav-light</inherits-from>
		<object-name>Light</object-name>
	</effect>
	
	<animation>
		<type>noshadow</type>
		<object-name>Light</object-name>
	</animation>
	
	<animation>
		<type>dist-scale</type>
		<object-name>Light</object-name>
		<factor>0.001</factor>
		<min>0.2</min>
		<max>10</max>
	</animation>
	
	<model>
		<name>LightPlate</name>
		<path>Models/Effects/lights.xml</path>
		<overlay>
			<params>
				<light-used>white</light-used>
				<show-prop>controls/lighting/nav-lights</show-prop>
			</params>
		</overlay>
	</model>
	
	<!-- Compositor light - we're not going to support any Rembrandt nonsense -->
	<light>
		<name>TailNavLight</name>
		<type>spot</type>
		<position>
			<x-m>0</x-m>
			<y-m>0</y-m>
			<z-m>0</z-m>
		</position>
		<direction>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</direction>
		<ambient>
			<r>1</r>
			<g>1</g>
			<b>1</b>
			<a>0</a>
		</ambient>
		<diffuse>
			<r>1</r>
			<g>1</g>
			<b>1</b>
			<a>0</a>
		</diffuse>
		<specular>
			<r>1</r>
			<g>1</g>
			<b>1</b>
			<a>0</a>
		</specular>
		<attenuation>
			<c>1</c>
			<l>0.225</l>
			<q>0.1875</q>
		</attenuation>
		<spot-exponent>6</spot-exponent>
		<spot-cutoff>70</spot-cutoff>
		<range-m>20</range-m>
		<dim-factor>
			<property>controls/lighting/nav-lights</property>
		</dim-factor>
	</light>
</PropertyList>
