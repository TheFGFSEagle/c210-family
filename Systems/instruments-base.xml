<?xml version="1.0"?>
<PropertyList>	
	<!-- NAV2 ARC - TO=-1, FROM=1, normal OBS=0-->
	<filter>
		<name>NAV2 Automatic Radial Centering</name>
		<type>gain</type>
		<gain>1</gain>
		<enable>
			<condition>
				<not-equals>
					<property>/instrumentation/nav[1]/radials/arc-mode</property>
					<value>0</value>
				</not-equals>
			</condition>
		</enable>
		<input>
			<!-- TO mode -->
			<condition>
				<less-than>
					<property>/instrumentation/nav[1]/radials/arc-mode</property>
					<value>0</value>
				</less-than>
			</condition>
			<expression>
				<floor>
					<sum>
						<property>/instrumentation/rnav/actual-radial-deg</property>
						<value>0.5</value>
					</sum>
				</floor>
			</expression>
		</input>
		<input>
			<condition>
				<equals>
					<property>/instrumentation/nav[1]/radials/arc-mode</property>
					<value>1</value>
				</equals>
			</condition>
			<expression>
				<floor>
					<sum>
						<property>/instrumentation/rnav/reciprocal-radial-deg</property>
						<value>0.5</value>
					</sum>
				</floor>
			</expression>
		</input>
		<output>
			<property>/instrumentation/nav[1]/radials/selected-deg</property>
			<period>
				<min>0</min>
				<max>359</max>
			</period>
		</output>
	</filter>
	
	<filter>
		<name>Hobbs meter time (seconds)</name>
		<type>gain</type>
		<gain>1</gain>
		<update-interval-secs>1</update-interval-secs>
		<enable>
			<condition>
				<property>/controls/electric/battery-switch</property>
			</condition>
		</enable>
		<input>
			<expression>
				<sum>
					<property>/instrumentation/hobbs-meter/indicated-hobbs-time-seconds</property>
					<value>1</value>
				</sum>
			</expression>
		</input>
		<output>/instrumentation/hobbs-meter/indicated-hobbs-time-seconds</output>
	</filter>
	<filter>
		<name>Hobbs meter time (hours)</name>
		<type>gain</type>
		<gain>1</gain>
		<update-interval-secds>1</update-interval-secds>
		<input>
			<expression>
				<quotient>
					<property>/instrumentation/hobbs-meter/indicated-hobbs-time-seconds</property>
					<value>3600</value>
				</quotient>
			</expression>
		</input>
		<output>/instrumentation/hobbs-meter/indicated-hobbs-time-hours</output>
	</filter>
</PropertyList>
					
