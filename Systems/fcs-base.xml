<?xml version="1.0" encoding="UTF-8"?>
<flight_control>
	<channel name="Pitch">

		<summer>
			<input>fcs/elevator-cmd-norm</input>
			<input>fcs/pitch-trim-cmd-norm</input>
			<clipto>
				<min>-1</min>
				<max>1</max>
			</clipto>
			<output>fcs/elevator-pos-norm</output>
		</summer>
		

		<kinematic>
			<input>fcs/elevator-pos-norm</input>
			<traverse>
				<setting>
					<position>-1</position>
					<time>0</time>
				</setting>
				<setting>
					<position>1</position>
					<time>0.5</time>
				</setting>
			</traverse>
			<output>fcs/elevator-pos-norm-damped</output>
		</kinematic>
		
		<aerosurface_scale>
			<input>fcs/elevator-pos-norm-damped</input>
			<range>
				<min>-17</min>
				<max>23</max>
			</range>
			<output>fcs/elevator-pos-deg</output>
		</aerosurface_scale>
	</channel>
	
	<channel name="Ailerons">

		<fcs_function> 
		<function>			
			<product>
			<value>0.8</value>
				<sum>
					<property>fcs/aileron-cmd-norm</property>
					<property>fcs/roll-trim-cmd-norm</property>
					<product>
						<difference>
							<property>fcs/aileron-cmd-norm</property>
							<property>fcs/rudder-cmd-norm</property>
						</difference>
						<value>0.2</value>
					</product>
				</sum>
			</product>
			</function>			
			<clipto>
				<min>-1</min>
				<max>1</max>
			</clipto>
			<output>fcs/aileron-pos-norm</output>
		</fcs_function> 


<!--
		<summer>
			<input>fcs/aileron-cmd-norm</input>
			<input>fcs/roll-trim-cmd-norm</input>
			<clipto>
				<min>-1</min>
				<max>1</max>
			</clipto>
			<output>fcs/aileron-pos-norm</output>
		</summer>
-->		
		<kinematic>
			<input>fcs/aileron-pos-norm</input>
			<traverse>
				<setting>
					<position>-1</position>
					<time>0</time>
				</setting>
				<setting>
					<position>1</position>
					<time>0.5</time>
				</setting>
			</traverse>
			<output>fcs/aileron-pos-norm-damped</output>
		</kinematic>
		
		<aerosurface_scale>
			<input>fcs/aileron-pos-norm-damped</input>
			<range>
				<min>-17.5</min>
				<max>17.5</max>
			</range>
			<output>fcs/aileron-pos-deg</output>
		</aerosurface_scale>
		
		<aerosurface_scale>
			<input>fcs/aileron-pos-deg</input>
			<domain>
				<min>-17.5</min>
				<max>17.5</max>
			</domain>
			<range>
				<min>-0.31</min>
				<max>0.31</max>
			</range>
			<output>fcs/aileron-pos-rad</output>
		</aerosurface_scale>

		<aerosurface_scale>
			<input>fcs/aileron-pos-norm</input>
			<range>
				<min>-1</min>
				<max>1</max>
			</range>
			<output>fcs/left-aileron-pos-norm</output>
		</aerosurface_scale>
		
		<aerosurface_scale>
			<input>-fcs/aileron-pos-norm</input>
			<range>
				<min>-1</min>
				<max>1</max>
			</range>
			<output>fcs/right-aileron-pos-norm</output>
		</aerosurface_scale>
		
		<aerosurface_scale>
			<input>fcs/left-aileron-pos-norm</input>
			<range>
				<min>-15</min>
				<max>20</max>
			</range>
			<output>fcs/left-aileron-pos-deg</output>
		</aerosurface_scale>
		
		<aerosurface_scale>
			<input>fcs/right-aileron-pos-norm</input>
			<range>
				<min>-15</min>
				<max>20</max>
			</range>
			<output>fcs/right-aileron-pos-deg</output>
		</aerosurface_scale>
	</channel>
	
	<hysteresis_limits unit="DEG">
		<min>7</min>
		<max>15</max>
	</hysteresis_limits>
	
	<channel name="Rudder">

		<summer>
			<input>fcs/rudder-cmd-norm</input>
			<input>fcs/yaw-trim-cmd-norm</input>
			<clipto>
				<min>-1</min>
				<max>1</max>
			</clipto>
			<output>fcs/rudder-pos-norm</output>
		</summer>

<!--
		<fcs_function>
		<function>			
			<product>
			<value>0.8</value>
				<sum>
					<property>fcs/rudder-cmd-norm</property>
					<property>fcs/yaw-trim-cmd-norm</property>
					<product>
						<difference>
							<property>fcs/rudder-cmd-norm</property>
							<property>fcs/aileron-cmd-norm</property>
						</difference>
						<value>0.2</value>
					</product>
				</sum>
			</product>
			</function>			
			<clipto>
				<min>-1</min>
				<max>1</max>
			</clipto>
			<output>fcs/rudder-pos-norm</output>
		</fcs_function>	
-->		
		<kinematic>
			<input>fcs/rudder-pos-norm</input>
			<traverse>
				<setting>
					<position>-1</position>
					<time>0</time>
				</setting>
				<setting>
					<position>1</position>
					<time>0.5</time>
				</setting>
			</traverse>
			<output>fcs/rudder-pos-norm-damped</output>
		</kinematic>
		
		<aerosurface_scale>
			<input>fcs/rudder-pos-norm-damped</input>
			<range>
				<min>-24</min>
				<max>24</max>
			</range>
			<output>fcs/rudder-pos-deg</output>
		</aerosurface_scale>
	</channel>
	
	<channel name="Cowl flaps">
		<kinematic name="Cowl flaps">
			<input>/controls/engines/engine[0]/cowl-flaps-norm</input>
			<traverse>
				<setting>
					<position>0</position>
					<time>0</time>
				</setting>
				<setting>
					<position>1</position>
					<time>1</time>
				</setting>
			</traverse>
			<output>propulsion/engine[0]/cowl-flaps-norm</output>
		</kinematic>
		
		<aerosurface_scale>
			<input>propulsion/engine[0]/cowl-flaps-norm</input>
			<gain>1.0</gain>
			<zero_centered>false</zero_centered>
			<domain>
				<min>0</min>
				<max>1</max>
			</domain>
			<range>
				<min>0.4</min>
				<max>0.9</max>
			</range>
			<output>propulsion/engine[0]/cooling-factor</output>
		</aerosurface_scale>
	</channel>
</flight_control>
